services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: goal-diary-app
    ports:
      - "5173:5173"
      - "3000:3000"
    volumes:
      - .:/app:cached
      - node_modules:/app/node_modules
      - /app/dist
    environment:
      - NODE_ENV=development
      - CHOKIDAR_USEPOLLING=true
      - WATCHPACK_POLLING=true
    depends_on:
      - supabase-db
    networks:
      - goal-diary-network
    command: npm run dev
    stdin_open: true
    tty: true

  # Supabase Local Development
  supabase-db:
    image: supabase/postgres:15.1.1.54
    container_name: goal-diary-db
    environment:
      POSTGRES_DB: postgres
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: your-super-secret-and-long-postgres-password
      POSTGRES_HOST: supabase-db
    ports:
      - "54322:5432"
    volumes:
      - supabase-db-data:/var/lib/postgresql/data
      - ./supabase/migrations:/docker-entrypoint-initdb.d
    networks:
      - goal-diary-network

  # Supabase Studio (optional) - Disabled: requires full Supabase local setup with Kong, Auth, etc.
  # To use Supabase Studio, run: npx supabase init && npx supabase start
  # supabase-studio:
  #   image: supabase/studio:latest
  #   container_name: goal-diary-studio
  #   environment:
  #     SUPABASE_URL: http://localhost:54321
  #     SUPABASE_REST_URL: http://kong:8000/rest/v1
  #     SUPABASE_ANON_KEY: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNni43kdQwgnWNReilDMblYTn_I0
