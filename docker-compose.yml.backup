  #   ports:
  #     - "3001:3000"
  #   depends_on:
  #     - supabase-db
  #   networks:
  #     - goal-diary-network

  # Test environment
  test:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: goal-diary-test
    environment:
      - NODE_ENV=test
    volumes:
      - .:/app:cached
      - node_modules:/app/node_modules
    networks:
      - goal-diary-network
    command: npm run test:unit
    profiles: ["test"]

volumes:
  node_modules:
  supabase-db-data:

networks:
  goal-diary-network:
    driver: bridge