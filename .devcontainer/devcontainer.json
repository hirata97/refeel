{
  "name": "GoalCategorizationDiary (Refeel) Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",

  "customizations": {
    "vscode": {
      "extensions": [
        // Vue 3 + TypeScript
        "Vue.volar",

        // Code Quality
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",

        // Testing
        "vitest.explorer",
        "ms-playwright.playwright",

        // Database
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",

        // Git
        "eamodio.gitlens",

        // Utilities
        "christian-kohler.path-intellisense",
        "naumovs.color-highlight"
      ],

      "settings": {
        // Editorè¨­å®š
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit",
          "source.fixAll.eslint": "explicit"
        },
        "editor.tabSize": 2,
        "editor.insertSpaces": true,

        // TypeScriptè¨­å®š
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.updateImportsOnFileMove.enabled": "always",

        // Vueè¨­å®š
        "vue.codeActions.enabled": true,
        "[vue]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },

        // Prettierè¨­å®š
        "prettier.requireConfig": false,
        "prettier.useEditorConfig": true,

        // ESLintè¨­å®š
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact",
          "vue"
        ],

        // ãƒ•ã‚¡ã‚¤ãƒ«è¨­å®š
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,

        // é™¤å¤–è¨­å®š
        "files.exclude": {
          "**/.git": true,
          "**/node_modules": true,
          "**/dist": true,
          "**/.DS_Store": true
        },

        // ã‚¿ãƒ¼ãƒŸãƒŠãƒ«è¨­å®š
        "terminal.integrated.defaultProfile.linux": "bash",

        // Gitè¨­å®š
        "git.autofetch": true,
        "git.confirmSync": false,

        // ãã®ä»–
        "extensions.ignoreRecommendations": false
      }
    }
  },

  // ãƒãƒ¼ãƒˆè»¢é€
  "forwardPorts": [5173, 3000, 54322],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Preview Server",
      "onAutoForward": "silent"
    },
    "54322": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  // ã‚³ãƒ³ãƒ†ãƒŠèµ·å‹•å¾Œã®ã‚³ãƒãƒ³ãƒ‰
  "postCreateCommand": "npm install",
  "postStartCommand": "echo 'ğŸš€ Dev Container is ready! Run npm run dev to start development.'",

  // ã‚³ãƒ³ãƒ†ãƒŠä½œæˆæ™‚ã®æ©Ÿèƒ½è¿½åŠ 
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // remoteUserè¨­å®šï¼ˆDockerfileã®ãƒ¦ãƒ¼ã‚¶ãƒ¼ã¨ä¸€è‡´ï¼‰
  "remoteUser": "nextjs",

  // ãƒã‚¦ãƒ³ãƒˆè¨­å®šï¼ˆãƒ‘ãƒ•ã‚©ãƒ¼ãƒãƒ³ã‚¹å‘ä¸Šï¼‰
  "mounts": [
    "source=${localWorkspaceFolder}/node_modules,target=/app/node_modules,type=volume"
  ]
}
