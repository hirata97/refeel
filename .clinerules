# Cline Rules Configuration

# Project Stack

# Backend
backend:
  service: Supabase

# Deployment
deployment:
  platform: Vercel
  auto_deploy: true
  preview_deploy: true
stack:
  frontend: Vue.js
  typescript: true
  framework: Vue 3
  styling: CSS
  testing: Vitest
  e2e: Playwright
  bundler: Vite

# Memory Bank Configuration
memory_bank:
  enabled: true
  docs_folder: cline_docs
  project_brief: cline_docs/projectBrief.md

# Project Structure
structure:
  src:
    - assets
    - components
    - views
    - router
    - stores
    - lib
    - utils

# Security Configuration
security:
  restricted_files:
    - .env
    - '**/config/secrets.*'
    - '**/*credentials*'
    - '**/*api_key*'
  instructions:
    - 'セキュリティ上の理由から、上記のファイルは読み取りや変更を行わないでください'
    - 'API キーや資格情報を含むファイルは常に保護してください'
